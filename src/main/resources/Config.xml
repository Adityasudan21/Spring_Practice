    <!--    For auto -Wire the ID of bean should be same as the name of reference as we are using byType here-->
    <bean id="p1" class="org.example.Programmer" autowire="byType">
        <!--            byType will search for same type of beans and assign it. (Multiple beans of same type will result in conflict and error)-->
        <property name="age" value="26"/>
        <!--            We will not create property tag for computer as we want to use Auto-wire for this-->
    </bean>

